<%= link_to "Back", home_path %>

<table style="width:100%">
<caption><h1>Employee Table</h1></caption>
<tr>
  <th>Id</th>
  <th>Firstname</th>
  <th>Lastname</th>
  <th>Gender</th>
  <th>Date Of Birth</th>
  <th>Date Of Joining</th>
  <th>Department Name</th>
  <th>Update</th>
  <th>Delete</th>
</tr>
<% @employees.order(:id).each do |employee| %>
<tr>
  <td><%= employee.id %> </td>
  <td><%= employee.name %></td>
  <td><%= employee.last_name %></td>
  <td><%= employee.gender %></td>
  <td><%= employee.dob %></td>
  <td><%= employee.doj %></td>
  <% if  employee.department %>
    <td><%= employee.department.name%></td>
  <% else %>
    <td>To Be Deleted</td>
  <% end %>
  <td><%= link_to "edit", employee_path(employee) , method: :put %></td>
  <td><%= link_to "Delete", employee_path(employee) , method: :delete, data: {confirm: 'Are you sure?'} %></td>
</tr>
<%end%>
</table>

<div>
  <% for i in 1..@pages %> 
    <%= link_to i, employees_path(page: i-1) %>
  <%end%>
</div>